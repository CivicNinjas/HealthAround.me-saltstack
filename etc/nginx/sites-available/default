upstream gunicorn {
    server 127.0.0.1:8000;
}

server {
    listen 80 default;
    client_max_body_size 4G;
    server_name _;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://gunicorn;
    }
}

# vim: set filetype=nginx:
